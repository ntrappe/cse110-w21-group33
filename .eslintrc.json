{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "prettier",
    "plugin:cypress/recommended",
    "plugin:chai-friendly/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "import/extensions": 0, // Allow .js in filenames
    "no-param-reassign": [2, { "props": false }], // Prevent warning when updating DOM elements
    "max-len": [
      "warn",
      {
        "code": 100,
        "tabWidth": 2,
        "comments": 100,
        "ignoreComments": false,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ]
  }
}
